<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <style>

    h1 {
      /*
        font-size: 10px;
      */
    }
  </style>
  <body>
    <div class="container-fluid text-center">
      <div class="row">
        <div class="col-sm-4 col-sm-offset-4">
          <h1><%= title %></h1>
          <form action="/" method="post">
            <div class="form-group">
              <input name="query" type="text" placeholder="Enter City" required class="form-control"/>
            </div>
            <button type="submit" class="btn btn-default">Get Weather</button>
          </form>
          <% if(weather !== null){ %>
            <div>
              <h3><%= city %>, <%= country %></h3>
              <img src='<%= weather_icon %>'><span><%= temperature %>Â°C</span>
              <p><%= weather.split() %></p>

            </div>
          <% } %>
          <% if(error !== null){ %>
            <p><%= error %></p>
          <% } %>
          <br/><br/><a href="/queries">View Queries</a>
        </div>
      </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

  </body>
</html>
